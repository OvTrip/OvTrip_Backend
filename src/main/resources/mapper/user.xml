<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ovtrip.user.model.mapper.UserMapper">

    <resultMap type="userDto" id="user">
        <result column="user_id" property="userId"/>
        <result column="user_email" property="userEmail"/>
        <result column="user_nickname" property="userNickname"/>
        <result column="social_type" property="socialType"/>
    </resultMap>

    <select id="idCheck" parameterType="String" resultType="int">
        select count(user_email)
        from users
        where user_email = #{userEmail}
    </select>

    <insert id="joinUser" parameterType="userDto">
        insert into users (user_email, user_password, user_nickname, social_type)
        values (#{userEmail}, #{userPassword}, #{userNickname}, #{socialType})
    </insert>

    <select id="getUserById" parameterType="int" resultMap="user">
        select user_id, user_email, user_nickname, social_type
        from users
        where user_id = #{userId}
    </select>

</mapper>